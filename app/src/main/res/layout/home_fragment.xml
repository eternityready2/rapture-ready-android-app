<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/home_grids_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/rapture_ready_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/browse_rapture_ready"
                android:textSize="24sp" />

            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="3dp"
                app:cardBackgroundColor="@color/blue"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="12dp"/>

            <GridView
                android:id="@+id/rapture_ready_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="3"
                android:layout_marginTop="12dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/eternity_ready_media_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/rapture_ready_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/eternity_ready_media"
                android:textSize="24sp"
                android:layout_marginTop="18dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="3dp"
                app:cardBackgroundColor="@color/blue"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="12dp"/>

            <GridView
                android:id="@+id/eternity_ready_media_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="3"
                android:layout_marginTop="24dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/connect_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_below="@id/eternity_ready_media_bg"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/connect_with_us"
                android:textSize="24sp"
                android:layout_marginTop="18dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="90dp"
                android:layout_height="3dp"
                app:cardBackgroundColor="@color/blue"
                android:layout_marginTop="8dp"
                app:cardCornerRadius="12dp"/>

            <GridView
                android:id="@+id/connect_grid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:numColumns="3"
                android:layout_marginTop="24dp"/>

        </LinearLayout>

    </LinearLayout>


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/home_frag_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</RelativeLayout>